<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1286&q=80);">
  <div class="container">
    <h1>Cocktails <strong> make the world a better place!</strong> </h1>
    <p>Mix cocktails and enjoy life!</p>
    <%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-flat' %>
  </div>
</div>

<div class="container">
  <% @cocktails.each do |cocktail| %>
    <div class="card-product">
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      <div class="card-product-infos">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    </div>
  <% end %>
</div>
