<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Doses</th>
              <% @cocktail.doses.each do  |dose| %>
                <td><%= dose.description %></td>
                <td><%= dose.ingredient.name %></td>
              <% end%>
          </tr>
        </tbody>
      </table>

      <%= render "doses/form" %>

      <%= link_to "See all cocktail", cocktails_path %>
    </div>
  </div>
</div>



